{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    // "strictNullChecks": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      // "plugins": [{ "name": "typescript-plugin-css-modules" }],
    }
  },
  "types": [
    "@testing-library/jest-dom",
  ]
}